#include<stdio.h>
#include<conio.h>
#include<math.h>>
int main()
{
    int r1,r2,a,b,c,d;
    printf("Enter the coefficients\n");
    scanf("%d%d%d",&a,&b,&c);
    d=sqrt((b*b)-4*a*c);
    if(d==0)
    {
        r1=-b/2*a;
        r2=-b/2*a;
        printf("the roots are real and equal");
    }
    else if(d>0)
    {
        r1=(-b-d)/2*a;
        r2=(-b+d)/2*a;
        printf("the roots are real and distinct");
    }
    else
    {
        printf("r1 and r2 are imaginary");
    }
    printf("\nr1=%d\n r2=%d",r1,r2);
    getch();
    return 0;
}
